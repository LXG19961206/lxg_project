/* pages/lxg/login/login.wxss */
page{
  background:linear-gradient(to bottom,
#dad299 ,#b0dab9);
  font-weight: 500;
}
#login_box{
  position: absolute;
  background:rgb(0,0,0,0.1);
  width:80%;
  margin:50rpx 10%;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 60rpx;
  margin-bottom:100rpx; 
}
view{
  clear:both;
}
.contianer>image{
  width:50%;
  margin:20rpx 0 -30rpx 180rpx;
}
.inputAndImg>input{
  position: absolute;
  top:10rpx;
  left:20%;
  display: inline;
  border-bottom:1px solid #ddd;
  color:#efefef;
  padding-left:20rpx; 
  width:64%;
  font-size: 25rpx !important;
}
.inputAndImg>image{
  width:10%;
  margin-left:10%;
}
.inputAndImg{
  position: relative;
  margin-top:50rpx;
}
button{
  border-radius: 30rpx;
  height:120rpx;
  line-height: 80rpx;
  margin-top:60rpx;
  background-color: #dc3545;
  opacity: 0.6;
}
navigator{
  color:#ddd;
  margin-left:60%;
  margin-top:40rpx;
  font-size: 28rpx; 
}
.other{
  text-align: center;
  margin-top:50rpx;
  color:#ddd;
  font-size: 26rpx;
}
.otherlogo{
  margin-top:30rpx;
  display: flex;
  justify-content: space-around;
}
.otherlogo image{
  width:22%
}
.switch_text{
  margin-bottom: 50rpx;
  color:white;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 28rpx;
}
.placeholder{
  color:#efefef;
  margin-left:10%; 
  font-size: 26rpx;
}