<view class='title'>选择您感兴趣的内容</view>
<button class='switcher' bindtap='totab'
style='position:static;'>换一批?</button>
<view class='group_1'>
  <text wx:for='{{page1}}' wx:key='index'
  data-select='{{index}}'
  data-content='{{item}}'
  data-type='a'
  style='display:{{show[0]}};{{style.a[index]}}'
  bindtap='tapevent'>{{item}}</text>
</view>
<view class='group_1' id='g2'>
  <text wx:for='{{page2}}' wx:key='index'
  data-select='{{index}}'
  data-content='{{item}}'
  data-type='b'
  style='display:{{show[1]}};{{style.b[index]}}'
  bindtap='tapevent'>{{item}}</text>
</view>
<view class='group_1' id='g3'>
  <text wx:for='{{page3}}' wx:key='index'
 data-select='{{index}}'
  data-content='{{item}}'
  data-type='c'
  style='display:{{show[2]}};{{style.c[index]}}'
  bindtap='tapevent'>{{item}}</text>
</view>
<view class='sub'>
  <button bindtouchstart="submsg">朕选完了</button>
</view>
